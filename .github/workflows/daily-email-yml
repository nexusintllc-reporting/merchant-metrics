name: Daily Email Scheduler

on:
  schedule:
    # Run every day at 9:00 AM UTC
    - cron: '0 9 * * *'
  workflow_dispatch:  # Allow manual triggering from GitHub UI

jobs:
  trigger-daily-reports:
    runs-on: ubuntu-latest
    name: Trigger Daily Email Reports
    steps:
      - name: Trigger Reports
        run: |
          echo "ðŸ•’ Triggering daily email reports..."
          curl -X POST \
            "${{ secrets.APP_URL }}/REPLACE_WITH_CORRECT_ENDPOINT" \
            -H "Content-Type: application/json" \
            --max-time 300  # 5 minute timeout